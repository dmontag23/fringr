<% provide(:title, "Schedule for #{@schedule.name}") %>

<h1>Schedule for <%= "#{@schedule.name}" %></h1>
<div class="center">
	<h3>Pieces Scheduled:</h3>
	<% @schedule.days.each do |day| %>
	<%= "#{day.start_time.to_date}" %> <br />
  	<% day.scheduled_times.each do |scheduled_time| %>
  		<%= "#{scheduled_time.piece.title}: #{scheduled_time.start_time}" %> <br />
  		<% end %>
	<% end %>
</div>