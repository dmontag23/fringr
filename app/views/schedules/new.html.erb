<% provide(:title, 'New Schedule') %>

<h1>New Schedule</h1>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
		<%= form_for @schedule do |f| %>

		  <%= render 'shared/error_messages', object: f.object %>

  		<p>
    		<%= f.label :name %><br />
    		<%= f.text_field :name %> <br />
    		<%= f.label :actor_transition_time %><br />
    		<%= f.select :actor_transition_time, (0..12).map{ |item| item*5 } %>
    		<%= f.label :minutes %>
  		</p>
  		<%= f.fields_for :days do |df| %>
    		<%= df.label :start_time %> 
    		<%= df.datetime_select :start_date, :ampm => true, :minute_step => 5 %>
    		<%= df.label :end_time %> 
    		<%= df.datetime_select :end_date, :ampm => true, :minute_step => 5 %> <br />
  		<% end %>
  		<p><%= f.submit "Save" %></p>
		<% end %>
	</div>
</div>
