<%= form_for(@piece, url: yield(:url_path), html: {class: "form-horizontal"}) do |f| %>
  
  <div class="center"><%= render 'shared/error_messages', object: f.object %></div>

  <%= f.fields_for :scheduled_times do |builder| %>
    
    <div class="form-group">
      <%= builder.label :start_time, class: "control-label col-md-2 col-md-offset-3" %> 
      <div class="col-md-2"><%= builder.datetime_select :start_time, nil, {placeholder: "Click to add time"} %></div>
    </div>

  <% end %>

  <div class="form-group">
    <div class="col-md-1 col-md-offset-5">
      <%= f.submit "Save", class: "btn btn-lg btn-primary" %>
    </div>
    <div class="col-md-1">
      <%= link_to "Cancel", previous_url, class: "btn btn-lg btn-primary" %>
    </div>
  </div>

<% end %>