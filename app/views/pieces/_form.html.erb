<%= form_for(@piece, url: yield(:url_path)) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <p>
  	<%= f.label :title %><br />
  	<%= f.text_field :title %> <br />
    <%= f.label :length %><br />
    <%= f.text_field :length %> <br />
    <%= f.label :setup %><br />
    <%= f.text_field :setup %> <br />
    <%= f.label :cleanup %><br />
    <%= f.text_field :cleanup %> <br />
  	<%= f.label :location %><br />
  	<%= f.select :location, (0..5) %> <br />
    <%= f.label :rating %><br />
    <%= f.select :rating, (1..4) %> <br />
    <%= f.submit "Save" %>
  </p>

<% end %>