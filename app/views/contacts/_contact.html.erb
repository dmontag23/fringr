<tr id="contact-<%= contact.id %>">
  <td><%= contact.name %></td>
  <td><%= contact.email %></td>
  <td class="right">
  	<%= link_to "View Conflicts", contact_conflicts_path(contact), method: :get, class: "btn btn-primary" %>
 		<%= link_to "Delete", contact_path(contact), method: :delete, class: "btn btn-danger", 
                                  data: { confirm: "Are you sure? #{contact.name} will be removed from all your schedules and any conflicts will be deleted." } %>
    </td>
</tr>