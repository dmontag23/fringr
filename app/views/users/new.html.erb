<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br/>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br/>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br/>

      <%= f.label :password_confirmation, "Please Re-enter Your Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br/>

      <%= f.submit "Create My Account", class: "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>